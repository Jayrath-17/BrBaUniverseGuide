<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash_Screen"
    android:orientation="vertical"
    android:background="#C0F584"
    >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/bb10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bba10"
        />
        <ImageView
            android:id="@+id/bb11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bba12"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/bb20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bba20"
            />
        <ImageView
            android:id="@+id/bb21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bba22"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/bb30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bba30"
            />
        <ImageView
            android:id="@+id/bb31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bba32"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Walts' Territory"
        android:layout_margin="30dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/welcome_text"/>
</LinearLayout>
</LinearLayout>